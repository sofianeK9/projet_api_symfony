{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ article.nom }}</td>
			</tr>
			<tr>
				<th>Summary</th>
				<td>{{ article.summary }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ article.content }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ article.slug }}</td>
			</tr>
		</tbody>
	</table>
	<div class="centered-link">
	<a href="{{ path('app_admin_article_index') }}">back to list</a>

    </div>
	<a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="detail">edit</a>

	{{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
